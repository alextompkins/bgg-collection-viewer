{
  "name": "bgg-collection-viewer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite dev\" \"npm run types:watch\" -n vite,tsc -c green,cyan -k",
    "build": "tsc && vite build",
    "check:all": "npm run types:check && npm run lint && npm run prettier",
    "fix:all": "npm run lint:fix && npm run prettier:fix",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier --config ./.prettierrc.json --ignore-unknown --check \"**/*\"",
    "prettier:fix": "prettier --config ./.prettierrc.json --ignore-unknown --write \"**/*\"",
    "preview": "vite preview",
    "types:check": "tsc",
    "types:watch": "tsc --watch --preserveWatchOutput"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5",
    "preact": "^10.26.9",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "postcss": "^8.4.33",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.19"
  },
  "overrides": {
    "jiti": "2.5.1"
  }
}
